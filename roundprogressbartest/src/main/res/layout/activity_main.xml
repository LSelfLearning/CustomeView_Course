<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.lewish.start.roundprogressbartest.MainActivity">

    <com.lewish.start.roundprogressbartest.RoundProgressBar
        android:id="@+id/round_progress_bar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:roundColor="#eeeeee"
        app:roundProgressColor="#0096f4"
        app:max="100"
        app:textSize="24sp"
        app:textColor="#0096f4" />
</RelativeLayout>
